{% include 'partials/header.njk' %}

<section class="vh-100" style="background-color: #eee;">
  <div class="container py-5 h-100">
    <div class="row d-flex justify-content-center align-items-center h-100">
      <div class="col-md-12 col-xl-4">
        <div class="card" style="border-radius: 15px;">
          <div class="card-body text-center">
            <a href="/logout" class="btn btn-outline-secondary position-absolute top-0 start-0 mt-3 ms-3" id="logoutButton">
              Logout
            </a>
            <div class="mt-3 mb-4">
              <img src="" class="rounded-circle img-fluid" style="width: 100px;" />
            </div>
            <h4 class="mb-2">{{ user.userName }}</h4>
            <p class="text-muted mb-4">Character <span class="mx-2">|</span> {{ user.character}}</p>
            <a href="/training" class="btn btn-danger btn-rounded btn-lg"> Start Training</a>
            <div class="d-flex justify-content-between text-center mt-5 mb-2">
              <div>
                <p class="mb-2 h5">{{ user.sessionCompleted }}</p>
                <p class="text-muted mb-0">Sessions Completed</p>
              </div>
              <div class="px-3">
                <p class="mb-2 h5">{{ user.rank }}</p>
                <p class="text-muted mb-0">Rank</p>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

{% include 'partials/footer.njk' %}